      <%= tag :div, class: "room drop-target", style: room_aspect_padding_bottom %>
  </div>
</div>
<script>
// https://github.com/briangonzalez/jquery.pep.js/
$('.drop-target .pep').pep({
  droppable: '.drop-target',
  overlapFunction: false,
  useCSSTranslation: false,
  start: function(ev, obj){
    obj.noCenter = false;
  },
  revert: true,
  revertIf: function(ev, obj){
    // FIXME はみ出したら戻すようにしているが条件が甘くはみ出したままになることがある
    if ( this.activeDropRegions.length > 0 ) { 
      var $parent = this.activeDropRegions[0];
      return !$parent.attr("class").match(/room/);
    }
    return false;
  },
  stop: function(ev, obj){
    var $parent = obj.activeDropRegions[0];
    if ($parent.attr("class").match(/room/)) {
      console.log("drop in room")
      // FIXME room に置かれたときの処理（areaを更新）
    } else {
      // FIXME room以外に置かれたときの処理（areaを削除）
      console.log("drop out room")
    }
  }
}) 
</script>